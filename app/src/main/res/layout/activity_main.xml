<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewCronometro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="00:00:00"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonIniciarCronometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar" />

        <Button
            android:id="@+id/buttonDetenerCronometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detener" />

        <Button
            android:id="@+id/buttonReiniciarCronometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reiniciar" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextTemporizador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la duraciÃ³n (en segundos)"
        android:inputType="number"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/textViewTemporizador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="00:00:00"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonIniciarTemporizador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Temporizador" />
</LinearLayout>